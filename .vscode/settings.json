{
    "verilog.languageServer.veribleVerilogLs.enabled": true,
    "verilog.linting.linter": "verilator",
    "[verilog]": {
        "editor.defaultFormatter": "kukdh1.verible-formatter"
    },
    "editor.formatOnSave": true,
    "verilog.linting.iverilog.runAtFileLocation": true,
    "ctags-companion.command": "ctags -R --fields=+nKz -f .vscode/.tags --langmap=SystemVerilog:+.v -R rtl /opt/uvm-1.2/src",
    "verilog.formatting.verilogHDL.formatter": "verible-verilog-format",
    "verible-formatter.flagFile": ".vscode/.verilog-format",
}